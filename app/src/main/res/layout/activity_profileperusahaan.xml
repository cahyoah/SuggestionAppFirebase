<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo">

    <Button
        android:id="@+id/btn_gambaranumum"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_sejarahsikt"
        android:layout_alignStart="@+id/btn_visimisi"
        android:background="@drawable/roundshapebtn"
        android:text="Gambaran  UMUM"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <Button
        android:id="@+id/btn_visimisi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_gambaranumum"
        android:layout_alignParentStart="true"
        android:layout_marginStart="29dp"
        android:background="@drawable/roundshapebtn"
        android:text="Visi Misi"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="83dp" />

    <Button
        android:id="@+id/btn_sejarahsikt"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_gambaranumum"
        android:layout_marginBottom="29dp"
        android:background="@drawable/roundshapebtn"
        android:text="Sejarah Singkat"
        tools:layout_editor_absoluteX="218dp"
        tools:layout_editor_absoluteY="16dp" />
</RelativeLayout>